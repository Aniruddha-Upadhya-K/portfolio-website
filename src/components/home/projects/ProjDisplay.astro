---
import '../../../styles/global.css';
import type { Project } from '../../../data/home/type'
import Badge from '../../ui/Badge.astro'
import { Icon } from 'astro-icon/components';

type Prop = {
  project: Project;
}
const { project } = Astro.props as Prop;
---

<div class="flex flex-col gap-3">
  <div class="flex md:flex-row flex-col md:gap-2 gap-1 md:items-center justify-start">
    <h2 class="text-subheading lowercase">{project.name}</h2>
    <span class="md:block hidden w-1 h-4 border-r-white border-r"></span>
    <span class="text-caption lowercase">{project.date}</span>
  </div>
  <div class="flex flex-col md:gap-6 gap-4">
    <div class="flex flex-row flex-wrap justify-start md:gap-4 gap-2">
      {project.techs.map((tech) => (
      <Badge type={tech.type === 'main' ? "default" : (tech.type === 'sub' ? "outline" : "ghost")}>{tech.name}</Badge>
      ))}
    </div>
    <div class="flex flex-col gap-1">
      <p class="text-body lowercase">{project.desc}</p>
      {project.sidenote && <p class="text-subcaption lowercase text-justify">{project.sidenote}</p>}
    </div>
  </div>
  <div class="flex flex-row gap-4 items-center">
    {project.url.patent && <a target="_blank" class="flex flex-row items-center md:gap-2 gap-1" href={project.url.patent}>
      <span class="mt-[3px]">patent</span>
      <Icon name="line-md:file-document"/>
    </a>}
    {project.url.github && <a target="_blank" class="flex flex-row items-center md:gap-2 gap-1" href={project.url.github}>
      <span class="mt-[3px]">github</span>
      <Icon name="mdi:github"/>
    </a>}
    {project.url.website && <a target="_blank" class="flex flex-row items-center md:gap-2 gap-1" href={project.url.website}>
      <span class="mt-[3px]">website</span>
      <Icon name="mdi:external-link"/>
    </a>}
  </div>
</div>

